<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="20dp"
    android:paddingVertical="10dp">

    <Button
        android:id="@+id/load_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/drawable_carty_btn"
        android:stateListAnimator="@animator/anim_carty_btn"
        android:text="load 320 x 50"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/load_btn1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/drawable_carty_btn"
        android:stateListAnimator="@animator/anim_carty_btn"
        android:text="load 320 x 100"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/load_btn2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/drawable_carty_btn"
        android:stateListAnimator="@animator/anim_carty_btn"
        android:text="load 300 x 250"
        android:textColor="#ffffff" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/status_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="banner ad"
            android:textColor="#000000"
            android:textSize="16dp"
            android:textStyle="bold" />
    </ScrollView>

    <FrameLayout
        android:id="@+id/ad_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="#f4f4f4" />

</LinearLayout>