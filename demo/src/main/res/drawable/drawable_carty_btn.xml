<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 按压状态：渐变加深 -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:angle="45" android:centerColor="#F19D66" android:endColor="#D17A3A" android:startColor="#E08A4D" />
            <corners android:radius="5dp" />
        </shape>
    </item>

    <!-- 禁用状态：低饱和渐变 -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <gradient android:angle="90" android:centerColor="#F5C098" android:endColor="#F2B888" android:startColor="#F8D4B8" />
            <corners android:radius="5dp" />
        </shape>
    </item>

    <!-- 默认状态：主渐变（必须放在最后） -->
    <item>
        <shape android:shape="rectangle">
            <gradient android:angle="45" android:centerColor="#F19D66" android:endColor="#E08A4D" android:startColor="#FFB580" />
            <corners android:radius="5dp" />
        </shape>
    </item>
</selector>