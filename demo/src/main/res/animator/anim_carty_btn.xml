<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 按压状态：缩放0.95 + 阴影降低 -->
    <item android:state_pressed="true">
        <set>
            <objectAnimator
                android:propertyName="scaleX"
                android:duration="80"
                android:valueTo="0.95"
                android:valueType="floatType" />
            <objectAnimator
                android:propertyName="scaleY"
                android:duration="80"
                android:valueTo="0.95"
                android:valueType="floatType" />
            <objectAnimator
                android:propertyName="elevation"
                android:duration="80"
                android:valueTo="2dp"
                android:valueType="floatType" />
        </set>
    </item>

    <!-- 默认状态：回弹1.0 + 阴影恢复 -->
    <item>
        <set>
            <objectAnimator
                android:propertyName="scaleX"
                android:duration="80"
                android:valueTo="1.0"
                android:valueType="floatType" />
            <objectAnimator
                android:propertyName="scaleY"
                android:duration="80"
                android:valueTo="1.0"
                android:valueType="floatType" />
            <objectAnimator
                android:propertyName="elevation"
                android:duration="80"
                android:valueTo="6dp"
                android:valueType="floatType" />
        </set>
    </item>
</selector>